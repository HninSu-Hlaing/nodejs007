<!DOCTYPE html>
<html lang="en">
<head>
	<% include partial/head %>
</head>
<body>
	<div class="wrapper">
		<div class="main-panel">
			<div class="content">
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Form Elements</div>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-md-8 col-lg-4">
										<form class="" name="frm" action="/signup" method="post">
                      <div class="form-group">
  											<label for="name">Name</label>
  											<input type="text" class="form-control" id="name" name="name" placeholder="Enter name...">
  											<small id="emailHelp2" class="form-text text-muted">We'll never share your email with anyone else.</small>
  										</div>
										<div class="form-group">
											<label for="email">Email Address</label>
											<input type="email" class="form-control" id="email" name="email" placeholder="Enter email...">
											<small id="emailHelp2" class="form-text text-muted">We'll never share your email with anyone else.</small>
										</div>
										<div class="form-group">
											<label for="password">Password</label>
											<input type="password" class="form-control" id="password" name="pwd" placeholder="Enter password...">
											<small id="emailHelp2" class="form-text text-muted">We'll never share your email with anyone else.</small>
										</div>
										<div class="card-action">
											<button type="button"class="btn btn-success" id="sub">Signup</button>

										</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
        <script type="text/javascript" src="/javascripts/jquery.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
        <script type="text/javascript">
          $('#email').blur(function () {
            var data={email:$('#email').val()};
            if(data.email != ''){
              $.ajax({url:'/duemail',data:data,type:'POST',
              success:function (result) {
                if(result.status){
                  alert('duplicate email and not validate!!');
                  $('#email').val('');
                  $('#email').focus();
                }
              }

            });
          }
        });
        $('#sub').click(function () {
        var datap={password:$('#password').val()};
        if(datap.password != ''){
          $.ajax({url:'/pwdval',data:datap,type:'POST',
        success:function (result) {
          if(result.status){
            if($('#email').val() == '' || $('#name').val() == ''){
              alert('please enter other fields!!');
          }
          else {
              frm.submit();
          }
        }
          else{
            alert("duplicate password and not validate!");
            $('#password').val('');
            $('#password').focus();
          }
        }
        });
        }

        });

        </script>

</html>
